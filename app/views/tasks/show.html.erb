<div class="d-flex justify-content-center align-items-center vh-100">
  <div class="text-center" style="max-width: 600px;">
    <h1>Task Details</h1>
    <p class="text-justify"><strong>Title:</strong> <%= @task.title %></p>
    <p class="text-justify"><strong>Description:</strong> <%= @task.description %></p>
    <p class="text-justify"><strong>Due Date:</strong> <%= @task.due_date %></p>
    <p class="text-justify"><strong>Priority:</strong> <%= @task.priority %></p>
    <p class="text-justify"><strong>Status:</strong> <%= @task.status %></p>
    <%= link_to 'Edit Task', edit_task_path(@task), class: 'btn btn-primary mr-2' %>
    <%= link_to 'Back to List', tasks_path, class: 'btn btn-secondary' %>
  </div>
</div>
