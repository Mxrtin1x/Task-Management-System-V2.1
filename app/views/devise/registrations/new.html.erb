<div class="auth-page" style="background-color: #fff; background-size: cover; background-position: center; height: 100vh; display: flex; justify-content: center; align-items: center; padding-left: 10px; padding-right: 10px;">
  <div class="card p-4 shadow-lg" style="width: 480px; background-color: rgba(0, 0, 0, 0.7); color: white; border-radius: 12px;">
    <div class="text-center mb-3">
      <img src="<%= asset_path('logo.png') %>" alt="logo" class="mb-3" style="width: 100px; height: auto;">
      <h3 class="fw-bold">Sign Up</h3>
    </div>

    <!-- Show error messages -->
    <% if flash[:error] %>
      <div class="alert alert-danger"><%= flash[:error] %></div>
    <% end %>

    <%= form_with model: resource, url: registration_path(resource_name), local: true, class: "mb-3" do |f| %>
      <div class="mb-3">
        <%= f.text_field :username, autofocus: true, class: "form-control form-control-lg", placeholder: "Username", style: "background-color: #ffffff; color: black;" %>
      </div>
      <div class="mb-3">
        <%= f.email_field :email, class: "form-control form-control-lg", placeholder: "Email", style: "background-color: #ffffff; color: black;" %>
      </div>
      <div class="mb-3">
        <%= f.password_field :password, class: "form-control form-control-lg", placeholder: "Password", style: "background-color: #ffffff; color: black;" %>
      </div>
      <div class="mb-3">
        <%= f.password_field :password_confirmation, class: "form-control form-control-lg", placeholder: "Confirm Password", style: "background-color: #ffffff; color: black;" %>
      </div>

      <div class="d-flex align-items-center mb-4">
        <%= f.check_box :remember_me, class: "form-check-input me-2" %>
        <%= f.label :remember_me, class: "form-check-label" %>
      </div>

      <div class="d-grid">
        <%= f.submit "Sign Up", class: "btn btn-light btn-lg" %>
      </div>
    <% end %>

    <div class="text-center mt-3">
      <%= link_to "Already have an account? Login", new_user_session_path, class: "btn btn-light btn-sm" %>
    </div>
  </div>
</div>
