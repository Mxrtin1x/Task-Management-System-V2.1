<style>
  .card {
    border: 1px solid #ddd; /* Border around the card */
    border-radius: 12px; /* Rounded corners */
    margin-bottom: 20px; /* Space between cards */
    overflow: hidden; /* Ensure the header aligns perfectly with the border */
  }

  .card-header {
    background-color: #343a40; /* Default dark header color */
    color: #fff;
    text-align: center;
    padding: 15px;
    font-size: 1.25rem;
    border-bottom: 1px solid #ddd; /* Aligns header with card border */
  }

  .card-header.bg-danger {
    background-color: #dc3545; /* Specific color for Delete Account */
  }

   .btn-success {
    background-color: #000; /* Black background */
    border-color: #000; /* Black border */
  }

  .btn-success:hover {
    background-color: #333; /* Slightly lighter black for hover effect */
    border-color: #333; /* Matching border color on hover */
  }
</style>

<div class="container mt-5">
  <div class="row justify-content-center">
    <!-- Update Profile -->
    <div class="col-md-6 col-12 px-3">
      <div class="card">
        <div class="card-header bg-dark text-white text-center rounded-top">
          <h4>Update Profile</h4>
        </div>
        <div class="card-body p-4">
          <!-- Form content -->
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <div class="form-group mb-4">
              <%= f.label :username, class: "form-label text-secondary" %>
              <%= f.text_field :username, class: "form-control border-dark", required: true, autofocus: true %>
            </div>
            <div class="form-group mb-4">
              <%= f.label :email, class: "form-label text-secondary" %>
              <%= f.email_field :email, class: "form-control border-dark", required: true %>
            </div>
            <div class="form-group mb-4">
              <%= f.label :password, "Password (leave blank if you don't want to change it)", class: "form-label text-secondary" %>
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control border-dark" %>
            </div>
            <div class="form-group mb-4">
              <%= f.label :password_confirmation, class: "form-label text-secondary" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control border-dark" %>
            </div>
            <div class="form-group mb-4">
              <%= f.label :current_password, "Current password (we need your current password to confirm your changes)", class: "form-label text-secondary" %>
              <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control border-dark", required: true %>
            </div>
            <div class="d-flex justify-content-between">
              <%= f.submit "Save Changes", class: "btn btn-success px-4" %>
              <%= link_to "Cancel", root_path, class: "btn btn-outline-dark px-4" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Delete Account -->
    <div class="col-md-6 col-12 px-3 mt-4 mt-md-0">
      <div class="card">
        <div class="card-header bg-danger text-white text-center rounded-top">
          <h5>Delete Account</h5>
        </div>
        <div class="card-body text-center">
          <p>Once deleted, your account cannot be restored.</p>
          <%= button_to "Delete My Account", registration_path(resource_name), method: :delete, data: { confirm: "Are you sure you want to delete your account?" }, class: "btn btn-danger px-4" %>
        </div>
      </div>
    </div>
  </div>
</div>
